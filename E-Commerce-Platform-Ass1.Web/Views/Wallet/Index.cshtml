@model E_Commerce_Platform_Ass1.Web.Models.WalletViewModel

@{
    ViewData["Title"] = "Ví của tôi";
}

<div class="container mt-4">
    <h3 class="mb-4 text-center">💼 Ví của tôi</h3>

    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body p-4">

                    <!-- Balance -->
                    <div class="text-center mb-4">
                        <div class="text-muted mb-1">Số dư hiện tại</div>
                        <h1 class="fw-bold text-success">
                            @Model.Balance.ToString("N0") đ
                        </h1>
                    </div>

                    <!-- Action Buttons -->
                    <div class="d-flex justify-content-center gap-3 mb-4">
                        <a asp-action="TopUp" class="btn btn-primary btn-lg">
                            <i class="fas fa-plus-circle me-2"></i>Nạp tiền
                        </a>
                        <a asp-action="Transactions" class="btn btn-outline-secondary btn-lg">
                            <i class="fas fa-history me-2"></i>Lịch sử
                        </a>
                    </div>

                    <!-- Last change -->
                    <div class="d-flex justify-content-between align-items-center bg-light rounded-3 p-3 mb-3">
                        <div>
                            <div class="small text-muted">Giao dịch gần nhất</div>

                            @if (Model.LastChangeAmount.HasValue)
                            {
                                    <span class="fw-semibold
                                    @(Model.LastChangeAmount > 0 ? "text-success" : "text-danger")">
                                    @(Model.LastChangeAmount > 0 ? "+" : "")
                                    @Model.LastChangeAmount.Value.ToString("N0") đ
                                    </span>
                                    <span class="badge bg-secondary ms-2">
                                    @Model.LastChangeType
                                    </span>
                            }
                            else
                            {
                                    <span class="text-muted fst-italic">
                                        Chưa có giao dịch
                                    </span>
                            }
                        </div>

                        <i class="fas fa-exchange-alt fa-lg text-primary"></i>
                    </div>

                    <!-- Updated time -->
                    <div class="text-center text-muted small mb-3">
                        Cập nhật lúc:
                        <strong>@Model.UpdatedAt.ToString("dd/MM/yyyy HH:mm")</strong>
                    </div>

                    <hr />

                    <!-- Recent Transactions -->
                    @if (Model.Transactions.Any())
                    {
                        <h6 class="mb-3">Giao dịch gần đây</h6>
                        <div class="list-group list-group-flush">
                            @foreach (var tx in Model.Transactions.Take(5))
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                                    <div>
                                        <span class="badge @(tx.TransactionType == "TopUp" ? "bg-success" : tx.TransactionType == "Refund" ? "bg-info" : "bg-warning")">
                                            @tx.TransactionType
                                        </span>
                                        <small class="text-muted ms-2">@tx.Description</small>
                                    </div>
                                    <div class="text-end">
                                        <span class="fw-semibold @(tx.Amount > 0 ? "text-success" : "text-danger")">
                                            @(tx.Amount > 0 ? "+" : "")@tx.Amount.ToString("N0") đ
                                        </span>
                                        <br />
                                        <small class="text-muted">@tx.CreatedAt.ToString("dd/MM HH:mm")</small>
                                    </div>
                                </div>
                            }
                        </div>
                    }

                    <hr />

                    <!-- Info -->
                    <div class="alert alert-info small mb-0 rounded-3">
                        💡 <strong>Ví nội bộ</strong> được dùng để thanh toán đơn hàng.  
                        Nếu số dư không đủ, hệ thống sẽ tự động chuyển sang
                        <strong>MoMo</strong> để thanh toán phần còn thiếu.
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>
