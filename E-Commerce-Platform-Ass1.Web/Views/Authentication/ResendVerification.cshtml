@{
    ViewData["Title"] = "Gửi lại Email xác thực";
    Layout = "~/Views/Shared/_EShopperLayout.cshtml";
}

<!-- Page Header Start -->
<div class="container-fluid bg-secondary mb-5">
    <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 300px">
        <h1 class="font-weight-semi-bold text-uppercase mb-3">Gửi lại Email xác thực</h1>
        <div class="d-inline-flex">
            <p class="m-0"><a asp-controller="Home" asp-action="Index">Trang chủ</a></p>
            <p class="m-0 px-2">-</p>
            <p class="m-0">Gửi lại xác thực</p>
        </div>
    </div>
</div>
<!-- Page Header End -->

<!-- Resend Verification Start -->
<div class="container-fluid pt-5">
    <div class="row px-xl-5 justify-content-center">
        <div class="col-lg-5 col-md-7">
            <div class="bg-light p-5 rounded">
                <div class="text-center mb-4">
                    <i class="fas fa-paper-plane text-primary" style="font-size: 60px;"></i>
                    <h3 class="mt-3">Gửi lại Email xác thực</h3>
                    <p class="text-muted">Nhập địa chỉ email bạn đã đăng ký để nhận lại link xác thực.</p>
                </div>
                
                <form asp-action="ResendVerification" method="post">
                    @Html.AntiForgeryToken()
                    
                    <div class="form-group">
                        <label for="email">
                            <i class="fas fa-envelope mr-1"></i>Email
                        </label>
                        <input type="email" 
                               class="form-control @(ViewData.ModelState["email"]?.Errors.Count > 0 ? "is-invalid" : "")" 
                               id="email" 
                               name="email" 
                               placeholder="Nhập email của bạn" 
                               required>
                        @if (ViewData.ModelState["email"]?.Errors.Count > 0)
                        {
                            <div class="invalid-feedback">
                                @ViewData.ModelState["email"]?.Errors.FirstOrDefault()?.ErrorMessage
                            </div>
                        }
                    </div>
                    
                    <div class="alert alert-info small">
                        <i class="fas fa-info-circle mr-1"></i>
                        Nếu email tồn tại trong hệ thống và chưa được xác thực, bạn sẽ nhận được email mới.
                    </div>
                    
                    <button type="submit" class="btn btn-primary btn-block py-3">
                        <i class="fas fa-paper-plane mr-2"></i>Gửi Email xác thực
                    </button>
                </form>
                
                <hr class="my-4">
                
                <div class="text-center">
                    <p class="mb-2">Đã xác thực email?</p>
                    <a asp-action="Login" class="btn btn-outline-primary">
                        <i class="fas fa-sign-in-alt mr-2"></i>Đăng nhập
                    </a>
                </div>
                
                <div class="text-center mt-3">
                    <a asp-action="Register" class="text-muted small">
                        <i class="fas fa-user-plus mr-1"></i>Chưa có tài khoản? Đăng ký ngay
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Resend Verification End -->
