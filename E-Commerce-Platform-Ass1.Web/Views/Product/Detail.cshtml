@section Scripts {
    <script>
        $(document).ready(function () {
            var variants = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.ProductVariants.Select(v => new { v.Id, v.Size, v.Color, v.Price })));
            
            $('.variant-selector').change(function () {
                var selectedSize = $('input[name="size"]:checked').val() || "";
                var selectedColor = $('input[name="color"]:checked').val() || "";
                
                var variant = variants.find(v => v.Size == selectedSize && v.Color == selectedColor);
                if (variant) {
                    $('.font-weight-semi-bold.mb-4').first().text('$' + variant.Price.toFixed(2));
                    $('#selected-variant-id').val(variant.Id);
                } else if (selectedSize || selectedColor) {
                    var partialMatch = variants.find(v => (selectedSize && v.Size == selectedSize) || (selectedColor && v.Color == selectedColor));
                    if (partialMatch) {
                        $('.font-weight-semi-bold.mb-4').first().text('$' + partialMatch.Price.toFixed(2));
                        $('#selected-variant-id').val(partialMatch.Id);
                    }
                }
            });

            // Quantity selector logic
            $('.quantity button').on('click', function () {
                var button = $(this);
                var oldValue = button.parent().parent().find('input').val();
                if (button.hasClass('btn-plus')) {
                    var newVal = parseFloat(oldValue) + 1;
                } else {
                    if (oldValue > 1) {
                        var newVal = parseFloat(oldValue) - 1;
                    } else {
                        newVal = 1;
                    }
                }
                button.parent().parent().find('input').val(newVal);
            });

            $('input[name="quantity"]').on('keypress', function (e) {
                if (e.which < 48 || e.which > 57) {
                    e.preventDefault();
                }
            });

            $('input[name="quantity"]').on('input change', function() {
                var val = $(this).val();
                if (val !== '') {
                    var n = parseInt(val);
                    if (isNaN(n) || n < 1) {
                        $(this).val(1);
                    }
                }
            }).on('blur', function() {
                var val = $(this).val();
                if (val === '' || isNaN(parseInt(val)) || parseInt(val) < 1) {
                    $(this).val(1);
                }
            });

            $('#add-to-cart-form').submit(function (e) {
                var variantId = $('#selected-variant-id').val();
                if (!variantId && @(Model.ProductVariants.Any() ? "true" : "false")) {
                    alert('Vui lòng chọn Size hoặc Màu sắc sản phẩm.');
                    e.preventDefault();
                }
            });
        });
    </script>
}
