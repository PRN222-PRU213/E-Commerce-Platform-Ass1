@model E_Commerce_Platform_Ass1.Web.Models.AdminProductDetailViewModel
@{
    ViewData["Title"] = "Chi tiết sản phẩm";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-box"></i> Chi tiết sản phẩm</h2>
        <div>
            @if (Model.Status == "pending")
            {
                <a asp-action="PendingProducts" class="btn btn-outline-warning me-2">
                    <i class="fas fa-clock"></i> Danh sách chờ duyệt
                </a>
            }
            <a asp-action="AllProducts" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- Product Image & Basic Info -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">Thông tin sản phẩm</h6>
                    @switch (Model.Status)
                    {
                        case "active":
                            <span class="badge bg-success">Đang bán</span>
                            break;
                        case "pending":
                            <span class="badge bg-warning text-dark">Chờ duyệt</span>
                            break;
                        case "draft":
                            <span class="badge bg-secondary">Nháp</span>
                            break;
                        case "rejected":
                            <span class="badge bg-danger">Bị từ chối</span>
                            break;
                        default:
                            <span class="badge bg-secondary">@Model.Status</span>
                            break;
                    }
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl" alt="@Model.Name" 
                                 class="img-fluid rounded" style="max-height: 200px; object-fit: contain;" />
                        }
                        else
                        {
                            <div class="bg-light d-flex align-items-center justify-content-center rounded" 
                                 style="height: 200px;">
                                <i class="fas fa-image fa-4x text-muted"></i>
                            </div>
                        }
                    </div>

                    <h4 class="text-center">@Model.Name</h4>
                    <h5 class="text-center text-danger">@Model.BasePrice.ToString("N0")₫</h5>

                    <hr />

                    <div class="mb-3">
                        <label class="text-muted small">Mô tả</label>
                        <p>@(string.IsNullOrEmpty(Model.Description) ? "Chưa có mô tả" : Model.Description)</p>
                    </div>

                    <div class="mb-3">
                        <label class="text-muted small">Shop</label>
                        <p>
                            <a asp-action="ShopDetail" asp-route-id="@Model.ShopId" class="text-decoration-none">
                                <i class="fas fa-store"></i> @Model.ShopName
                            </a>
                        </p>
                    </div>

                    <div class="mb-3">
                        <label class="text-muted small">Danh mục</label>
                        <p><i class="fas fa-tag"></i> @Model.CategoryName</p>
                    </div>

                    <div class="mb-3">
                        <label class="text-muted small">Đánh giá</label>
                        <p>
                            @if (Model.AvgRating > 0)
                            {
                                <span class="text-warning">
                                    <i class="fas fa-star"></i> @Model.AvgRating.ToString("0.1")
                                </span>
                            }
                            else
                            {
                                <span class="text-muted">Chưa có đánh giá</span>
                            }
                        </p>
                    </div>

                    <div class="mb-3">
                        <label class="text-muted small">Ngày tạo</label>
                        <p><i class="fas fa-calendar"></i> @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                    </div>

                    <hr />

                    <!-- Actions -->
                    @if (Model.Status == "pending")
                    {
                        <div class="d-grid gap-2">
                            <form asp-action="ApproveProduct" asp-route-id="@Model.Id" method="post">
                                <button type="submit" class="btn btn-success w-100 mb-2">
                                    <i class="fas fa-check"></i> Duyệt sản phẩm
                                </button>
                            </form>
                            <button type="button" class="btn btn-danger w-100" data-bs-toggle="modal" data-bs-target="#rejectModal">
                                <i class="fas fa-times"></i> Từ chối sản phẩm
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Variants -->
        <div class="col-lg-8 mb-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-layer-group"></i> Biến thể sản phẩm (@(Model.Variants?.Count ?? 0))
                    </h6>
                </div>
                <div class="card-body">
                    @if (Model.Variants != null && Model.Variants.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>#</th>
                                        <th>Ảnh</th>
                                        <th>Tên biến thể</th>
                                        <th>SKU</th>
                                        <th>Màu</th>
                                        <th>Size</th>
                                        <th>Giá</th>
                                        <th>Tồn kho</th>
                                        <th>Trạng thái</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int idx = 1;
                                    }
                                    @foreach (var variant in Model.Variants)
                                    {
                                        <tr>
                                            <td>@idx</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(variant.ImageUrl))
                                                {
                                                    <img src="@variant.ImageUrl" alt="@variant.VariantName" 
                                                         class="img-thumbnail" style="width: 50px; height: 50px; object-fit: cover;" />
                                                }
                                                else
                                                {
                                                    <div class="bg-light d-flex align-items-center justify-content-center" 
                                                         style="width: 50px; height: 50px;">
                                                        <i class="fas fa-image text-muted"></i>
                                                    </div>
                                                }
                                            </td>
                                            <td>@variant.VariantName</td>
                                            <td><code>@variant.Sku</code></td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(variant.Color))
                                                {
                                                    <span class="badge" style="background-color: @variant.Color; color: white;">
                                                        @variant.Color
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>@(string.IsNullOrEmpty(variant.Size) ? "-" : variant.Size)</td>
                                            <td class="text-end">@variant.Price.ToString("N0")₫</td>
                                            <td class="text-center">
                                                @if (variant.Stock > 10)
                                                {
                                                    <span class="badge bg-success">@variant.Stock</span>
                                                }
                                                else if (variant.Stock > 0)
                                                {
                                                    <span class="badge bg-warning text-dark">@variant.Stock</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Hết hàng</span>
                                                }
                                            </td>
                                            <td>
                                                @if (variant.Status == "active")
                                                {
                                                    <span class="badge bg-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">@variant.Status</span>
                                                }
                                            </td>
                                        </tr>
                                        idx++;
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Summary -->
                        <div class="row mt-4">
                            <div class="col-md-4">
                                <div class="card bg-light">
                                    <div class="card-body text-center">
                                        <h6 class="text-muted">Tổng biến thể</h6>
                                        <h4>@Model.Variants.Count</h4>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card bg-light">
                                    <div class="card-body text-center">
                                        <h6 class="text-muted">Tổng tồn kho</h6>
                                        <h4>@Model.Variants.Sum(v => v.Stock)</h4>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card bg-light">
                                    <div class="card-body text-center">
                                        <h6 class="text-muted">Khoảng giá</h6>
                                        <h4>
                                            @Model.Variants.Min(v => v.Price).ToString("N0")₫ - 
                                            @Model.Variants.Max(v => v.Price).ToString("N0")₫
                                        </h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-layer-group fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Sản phẩm này chưa có biến thể nào.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Reject Modal -->
@if (Model.Status == "pending")
{
    <div class="modal fade" id="rejectModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <form asp-action="RejectProduct" asp-route-id="@Model.Id" method="post">
                    <div class="modal-header">
                        <h5 class="modal-title">Từ chối sản phẩm</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <p>Bạn có chắc muốn từ chối sản phẩm: <strong>@Model.Name</strong>?</p>
                        <div class="mb-3">
                            <label class="form-label">Lý do từ chối (không bắt buộc)</label>
                            <textarea name="reason" class="form-control" rows="3" 
                                      placeholder="Nhập lý do từ chối..."></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button type="submit" class="btn btn-danger">Từ chối</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}
