@model E_Commerce_Platform_Ass1.Data.Database.Entities.Shop
@{
    ViewData["Title"] = "Thông tin shop";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<!-- Shop Info Start -->
<div class="container-fluid py-5">
    <div class="row px-xl-5">
        <div class="col-lg-10 offset-lg-1">
            <div class="bg-light p-5 rounded shadow-sm">
                <div class="d-flex align-items-center justify-content-between mb-4">
                    <div>
                        <h2 class="font-weight-semi-bold mb-2">
                            <i class="fas fa-store text-primary mr-2"></i>@Model.ShopName
                        </h2>
                        <p class="text-muted mb-0">
                            <i class="fas fa-calendar-alt text-primary mr-2"></i>
                            Ngày tạo: @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                        </p>
                    </div>
                    <div>
                        @if (Model.Status == "Pending")
                        {
                            <span class="badge badge-warning badge-lg p-3">
                                <i class="fas fa-clock mr-2"></i>Chờ phê duyệt
                            </span>
                        }
                        else if (Model.Status == "Active")
                        {
                            <span class="badge badge-success badge-lg p-3">
                                <i class="fas fa-check-circle mr-2"></i>Đang hoạt động
                            </span>
                        }
                        else if (Model.Status == "Inactive")
                        {
                            <span class="badge badge-danger badge-lg p-3">
                                <i class="fas fa-times-circle mr-2"></i>Ngừng hoạt động
                            </span>
                        }
                        else
                        {
                            <span class="badge badge-secondary badge-lg p-3">
                                <i class="fas fa-info-circle mr-2"></i>@Model.Status
                            </span>
                        }
                    </div>
                </div>

                <hr class="my-4">

                <div class="row">
                    <div class="col-md-12 mb-4">
                        <div class="card border-0 shadow-sm h-100">
                            <div class="card-body">
                                <h5 class="card-title font-weight-semi-bold mb-3">
                                    <i class="fas fa-info-circle text-primary mr-2"></i>Thông tin shop
                                </h5>
                                <div class="mb-3">
                                    <label class="text-muted small font-weight-bold">Tên shop</label>
                                    <p class="mb-0 font-weight-semi-bold">@Model.ShopName</p>
                                </div>
                                <div class="mb-3">
                                    <label class="text-muted small font-weight-bold">Mô tả</label>
                                    <p class="mb-0">@Model.Description</p>
                                </div>
                                <div class="mb-3">
                                    <label class="text-muted small font-weight-bold">Trạng thái</label>
                                    <p class="mb-0">
                                        @if (Model.Status == "Pending")
                                        {
                                            <span class="badge badge-warning">Chờ phê duyệt</span>
                                        }
                                        else if (Model.Status == "Active")
                                        {
                                            <span class="badge badge-success">Đang hoạt động</span>
                                        }
                                        else if (Model.Status == "Inactive")
                                        {
                                            <span class="badge badge-danger">Ngừng hoạt động</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-secondary">@Model.Status</span>
                                        }
                                    </p>
                                </div>
                                <div>
                                    <label class="text-muted small font-weight-bold">Ngày tạo</label>
                                    <p class="mb-0">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm:ss")</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                @if (Model.Status == "Pending")
                {
                    <div class="alert alert-info mt-4">
                        <i class="fas fa-info-circle mr-2"></i>
                        <strong>Lưu ý:</strong> Shop của bạn đang chờ phê duyệt. Chúng tôi sẽ xem xét và phê duyệt trong thời gian sớm nhất.
                    </div>
                }

                <div class="mt-4">
                    <a asp-controller="Authentication" asp-action="Profile" class="btn btn-outline-primary">
                        <i class="fas fa-arrow-left mr-2"></i>Quay lại hồ sơ
                    </a>
                    <a href="#" class="btn btn-primary ml-2">
                        <i class="fas fa-edit mr-2"></i>Chỉnh sửa shop
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Shop Info End -->
