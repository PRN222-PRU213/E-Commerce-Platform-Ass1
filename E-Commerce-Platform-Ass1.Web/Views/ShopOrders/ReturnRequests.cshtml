@model IEnumerable<E_Commerce_Platform_Ass1.Service.DTOs.ReturnRequestDto>

@{
    ViewData["Title"] = "Yêu cầu đổi trả";
    var currentStatus = ViewBag.CurrentStatus as string;
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
            <i class="fas fa-undo-alt me-2"></i>Yêu cầu đổi trả
        </h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i> Quay lại Đơn hàng
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Status Filter -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="btn-group" role="group">
                <a asp-action="ReturnRequests" class="btn @(string.IsNullOrEmpty(currentStatus) ? "btn-primary" : "btn-outline-primary")">
                    Tất cả
                </a>
                <a asp-action="ReturnRequests" asp-route-status="Pending" class="btn @(currentStatus == "Pending" ? "btn-warning" : "btn-outline-warning")">
                    <i class="fas fa-clock me-1"></i> Chờ xử lý (@Model.Count(r => r.Status == "Pending"))
                </a>
                <a asp-action="ReturnRequests" asp-route-status="Approved" class="btn @(currentStatus == "Approved" ? "btn-success" : "btn-outline-success")">
                    <i class="fas fa-check me-1"></i> Đã duyệt (@Model.Count(r => r.Status == "Approved"))
                </a>
                <a asp-action="ReturnRequests" asp-route-status="Rejected" class="btn @(currentStatus == "Rejected" ? "btn-danger" : "btn-outline-danger")">
                    <i class="fas fa-times me-1"></i> Đã từ chối (@Model.Count(r => r.Status == "Rejected"))
                </a>
            </div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="fas fa-inbox fa-4x text-muted mb-3"></i>
            <h5 class="text-muted">Không có yêu cầu đổi trả nào</h5>
        </div>
    }
    else
    {
        <div class="card">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th>Mã yêu cầu</th>
                            <th>Khách hàng</th>
                            <th>Lý do</th>
                            <th>Số tiền yêu cầu</th>
                            <th>Ngày tạo</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var request in Model)
                        {
                            var statusClass = request.Status switch
                            {
                                "Pending" => "warning",
                                "Approved" => "success",
                                "Rejected" => "danger",
                                _ => "secondary"
                            };
                            var statusText = request.Status switch
                            {
                                "Pending" => "Chờ xử lý",
                                "Approved" => "Đã duyệt",
                                "Rejected" => "Đã từ chối",
                                _ => request.Status
                            };
                            <tr>
                                <td>
                                    <span class="fw-bold">#@request.Id.ToString().Substring(0, 8).ToUpper()</span>
                                    <br>
                                    <small class="text-muted">Đơn: #@request.OrderId.ToString().Substring(0, 8).ToUpper()</small>
                                </td>
                                <td>
                                    <span>@request.UserName</span>
                                    <br>
                                    <small class="text-muted">@request.UserEmail</small>
                                </td>
                                <td>
                                    @(request.Reason switch
                                    {
                                        "Defective" => "Sản phẩm lỗi",
                                        "WrongItem" => "Giao sai",
                                        "NotAsDescribed" => "Không đúng mô tả",
                                        "ChangeOfMind" => "Đổi ý",
                                        _ => request.Reason
                                    })
                                </td>
                                <td class="text-primary fw-bold">@request.RequestedAmount.ToString("N0") VNĐ</td>
                                <td>@request.CreatedAt.ToString("dd/MM/yyyy")</td>
                                <td><span class="badge bg-@statusClass">@statusText</span></td>
                                <td>
                                    <a asp-action="ReturnRequestDetail" asp-route-id="@request.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>
