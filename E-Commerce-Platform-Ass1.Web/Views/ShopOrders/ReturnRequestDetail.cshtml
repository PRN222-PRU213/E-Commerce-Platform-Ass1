@model E_Commerce_Platform_Ass1.Service.DTOs.ReturnRequestDto

@{
    ViewData["Title"] = "Chi tiết yêu cầu đổi trả";
    var statusClass = Model.Status switch
    {
        "Pending" => "warning",
        "Approved" => "success",
        "Rejected" => "danger",
        _ => "secondary"
    };
    var statusText = Model.Status switch
    {
        "Pending" => "Chờ xử lý",
        "Approved" => "Đã duyệt",
        "Rejected" => "Đã từ chối",
        _ => Model.Status
    };
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="mb-0">
                    <i class="fas fa-undo-alt me-2"></i>Yêu cầu #@Model.Id.ToString().Substring(0, 8).ToUpper()
                </h3>
                <a asp-action="ReturnRequests" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i> Quay lại
                </a>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="row">
                <!-- Left Column - Request Info -->
                <div class="col-lg-8">
                    <!-- Status Card -->
                    <div class="card mb-4 border-@statusClass">
                        <div class="card-body text-center py-3">
                            <span class="badge bg-@statusClass fs-5 px-4 py-2">@statusText</span>
                            @if (Model.Status == "Approved" && Model.ApprovedAmount.HasValue)
                            {
                                <p class="mt-2 mb-0 text-success fw-bold">
                                    Đã hoàn @Model.ApprovedAmount.Value.ToString("N0") VNĐ vào ví khách hàng
                                </p>
                            }
                        </div>
                    </div>

                    <!-- Customer Info -->
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h5 class="mb-0"><i class="fas fa-user me-2"></i>Thông tin khách hàng</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <label class="text-muted small">Họ tên</label>
                                    <p class="mb-0 fw-bold">@Model.UserName</p>
                                </div>
                                <div class="col-md-6">
                                    <label class="text-muted small">Email</label>
                                    <p class="mb-0">@Model.UserEmail</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Request Details -->
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Chi tiết yêu cầu</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="text-muted small">Loại yêu cầu</label>
                                    <p class="mb-0 fw-bold">
                                        @(Model.RequestType == "Return" ? "Trả hàng + Hoàn tiền" : "Chỉ hoàn tiền")
                                    </p>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="text-muted small">Lý do</label>
                                    <p class="mb-0 fw-bold">
                                        @(Model.Reason switch
                                        {
                                            "Defective" => "Sản phẩm bị lỗi/hỏng",
                                            "WrongItem" => "Giao sai sản phẩm",
                                            "NotAsDescribed" => "Không đúng mô tả",
                                            "ChangeOfMind" => "Đổi ý không muốn mua nữa",
                                            _ => Model.Reason
                                        })
                                    </p>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="text-muted small">Số tiền yêu cầu</label>
                                    <p class="mb-0 fw-bold text-primary fs-5">@Model.RequestedAmount.ToString("N0") VNĐ</p>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="text-muted small">Ngày tạo</label>
                                    <p class="mb-0">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                                </div>
                                @if (!string.IsNullOrEmpty(Model.ReasonDetail))
                                {
                                    <div class="col-12">
                                        <label class="text-muted small">Chi tiết lý do</label>
                                        <p class="mb-0 p-2 bg-light rounded">@Model.ReasonDetail</p>
                                    </div>
                                }
                            </div>

                            @if (Model.EvidenceImageUrls.Any())
                            {
                                <hr>
                                <h6 class="mb-3"><i class="fas fa-images me-2"></i>Hình ảnh bằng chứng</h6>
                                <div class="row g-2">
                                    @foreach (var imageUrl in Model.EvidenceImageUrls)
                                    {
                                        <div class="col-4 col-md-3">
                                            <a href="@imageUrl" target="_blank">
                                                <img src="@imageUrl" alt="Bằng chứng" class="img-fluid rounded" 
                                                     style="height: 100px; width: 100%; object-fit: cover;">
                                            </a>
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Order Items -->
                    <div class="card">
                        <div class="card-header bg-light">
                            <h5 class="mb-0"><i class="fas fa-shopping-bag me-2"></i>Sản phẩm trong đơn</h5>
                        </div>
                        <div class="card-body">
                            @foreach (var item in Model.OrderItems)
                            {
                                <div class="d-flex align-items-center mb-2 p-2 border rounded">
                                    <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "/images/no-image.png" : item.ImageUrl)" 
                                         alt="@item.ProductName" 
                                         class="rounded me-3" 
                                         style="width: 50px; height: 50px; object-fit: cover;">
                                    <div class="flex-grow-1">
                                        <span class="fw-bold">@item.ProductName</span>
                                        <small class="text-muted d-block">
                                            @if (!string.IsNullOrEmpty(item.Size)) { <span>Size: @item.Size</span> }
                                            @if (!string.IsNullOrEmpty(item.Color)) { <span class="ms-2">Màu: @item.Color</span> }
                                        </small>
                                    </div>
                                    <div class="text-end">
                                        <span>@item.Price.ToString("N0") VNĐ x @item.Quantity</span>
                                    </div>
                                </div>
                            }
                            <hr>
                            <div class="text-end">
                                <span class="fw-bold">Tổng giá trị đơn: </span>
                                <span class="text-primary fw-bold fs-5">@Model.OrderTotalAmount.ToString("N0") VNĐ</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Right Column - Actions -->
                <div class="col-lg-4">
                    @if (Model.Status == "Pending")
                    {
                        <!-- Approve Form -->
                        <div class="card mb-3 border-success">
                            <div class="card-header bg-success text-white">
                                <h6 class="mb-0"><i class="fas fa-check me-2"></i>Duyệt yêu cầu</h6>
                            </div>
                            <div class="card-body">
                                <form asp-action="ApproveReturn" asp-route-id="@Model.Id" method="post">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="approvedAmount" value="@Model.RequestedAmount" />
                                    <div class="mb-3">
                                        <label class="form-label">Số tiền sẽ hoàn</label>
                                        <div class="fs-4 fw-bold text-success">@Model.RequestedAmount.ToString("N0") VNĐ</div>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Ghi chú (tùy chọn)</label>
                                        <textarea name="response" class="form-control" rows="2" 
                                                  placeholder="Ghi chú cho khách hàng..."></textarea>
                                    </div>
                                    <button type="submit" class="btn btn-success w-100"
                                            onclick="return confirm('Xác nhận DUYỆT yêu cầu và hoàn tiền vào ví khách hàng?')">
                                        <i class="fas fa-check me-1"></i> Duyệt & Hoàn tiền
                                    </button>
                                </form>
                            </div>
                        </div>

                        <!-- Reject Form -->
                        <div class="card border-danger">
                            <div class="card-header bg-danger text-white">
                                <h6 class="mb-0"><i class="fas fa-times me-2"></i>Từ chối yêu cầu</h6>
                            </div>
                            <div class="card-body">
                                <form asp-action="RejectReturn" asp-route-id="@Model.Id" method="post">
                                    @Html.AntiForgeryToken()
                                    <div class="mb-3">
                                        <label class="form-label">Lý do từ chối <span class="text-danger">*</span></label>
                                        <textarea name="response" class="form-control" rows="3" required
                                                  placeholder="Nhập lý do từ chối..."></textarea>
                                    </div>
                                    <button type="submit" class="btn btn-danger w-100"
                                            onclick="return confirm('Xác nhận TỪ CHỐI yêu cầu hoàn trả này?')">
                                        <i class="fas fa-times me-1"></i> Từ chối
                                    </button>
                                </form>
                            </div>
                        </div>
                    }
                    else
                    {
                        <!-- Already Processed -->
                        <div class="card">
                            <div class="card-header bg-light">
                                <h6 class="mb-0"><i class="fas fa-history me-2"></i>Thông tin xử lý</h6>
                            </div>
                            <div class="card-body">
                                <p class="mb-2">
                                    <strong>Trạng thái:</strong> 
                                    <span class="badge bg-@statusClass">@statusText</span>
                                </p>
                                @if (Model.ProcessedAt.HasValue)
                                {
                                    <p class="mb-2">
                                        <strong>Ngày xử lý:</strong> @Model.ProcessedAt.Value.ToString("dd/MM/yyyy HH:mm")
                                    </p>
                                }
                                @if (Model.ApprovedAmount.HasValue)
                                {
                                    <p class="mb-2">
                                        <strong>Số tiền đã hoàn:</strong> 
                                        <span class="text-success fw-bold">@Model.ApprovedAmount.Value.ToString("N0") VNĐ</span>
                                    </p>
                                }
                                @if (!string.IsNullOrEmpty(Model.ShopResponse))
                                {
                                    <p class="mb-0">
                                        <strong>Phản hồi:</strong><br>
                                        <span class="text-muted">@Model.ShopResponse</span>
                                    </p>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
