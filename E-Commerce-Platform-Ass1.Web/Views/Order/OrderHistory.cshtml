@model PagedResult<OrderHistoryViewModel>

@{
    ViewData["Title"] = "Lịch sử đơn hàng";
}

<h3 class="mb-4 text-center">📦 Lịch sử đơn hàng</h3>
@if (TempData["Success"] != null)
{
        <div id="successAlert"
             class="alert alert-success alert-dismissible fade show"
             role="alert">
            ✅ @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
}


@if (!Model.Items.Any())
{
        <div class="alert alert-info">
            Bạn chưa có đơn hàng nào.
        </div>
}
else
{
        <div class="order-history-list">
        @foreach (var item in Model.Items)
        {
                    <div class="card mb-3 shadow-sm border-0">
                        <div class="card-body">

                            <!-- Header -->
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="fw-bold">
                                   🕒 <strong>Thời gian:</strong> @item.OrderDate.ToString("dd/MM/yyyy HH:mm")
                                </span>

                                <span class="badge 
                            @(item.Status == "PAID" ? "bg-success" :
                              item.Status == "PENDING" ? "bg-warning text-dark" :
                              item.Status == "CANCELLED" ? "bg-danger" :
                              "bg-secondary")">
                            @item.Status
                                </span>
                            </div>

                            <!-- Address -->
                            <div class="mb-2 text-muted">
                                📍 <strong>Địa chỉ:</strong> @item.ShippingAddress
                            </div>

                            <!-- Total -->
                            <div class="mb-3">
                                💰 <strong>Tổng tiền:</strong>
                                <span class="text-danger fw-bold">
                            @item.TotalAmount.ToString("N0") đ
                                </span>
                            </div>

                            <!-- Action -->
                            <div class="d-flex justify-content-end gap-2">

                                <a asp-controller="Order"
                                   asp-action="Detail"
                                   asp-route-orderId="@item.OrderId"
                                   class="btn btn-sm btn-primary">
                                    Xem chi tiết
                                </a>

                                            @if (item.Status == "PAID" && !item.IsRefunded)
                                            {
                                                <button class="btn btn-sm btn-danger"
                                                        data-bs-toggle="modal"
                                                        data-bs-target="#refundModal"
                                                        data-order-id="@item.OrderId"
                                                        data-amount="@item.TotalAmount">
                                                    Hoàn tiền
                                                </button>
                                            }
                            </div>

                        </div>
                    </div>
        }
        </div>

            <!-- PAGINATION -->
        <nav class="mt-4">
            <ul class="pagination justify-content-center">

                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="History"
                       asp-route-page="@(Model.CurrentPage - 1)">
                        ‹
                    </a>
                </li>

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link"
                               asp-action="History"
                               asp-route-page="@i">
                        @i
                            </a>
                        </li>
            }

                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="History"
                       asp-route-page="@(Model.CurrentPage + 1)">
                        ›
                    </a>
                </li>

            </ul>
        </nav>
}

                               <!-- Refund Modal -->
<div class="modal fade" id="refundModal" tabindex="-1">
    <div class="modal-dialog">
        <form asp-controller="Refund" asp-action="Refund" method="post" class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Xác nhận hoàn tiền</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <input type="hidden" name="orderId" id="refundOrderId" />

                <div class="mb-3">
                    <label class="form-label">Số tiền hoàn</label>
                    <input type="number"
                           class="form-control"
                           name="amount"
                           id="refundAmount"
                           readonly />
                </div>

                <div class="mb-3">
                    <label class="form-label">Lý do hoàn tiền</label>
                    <textarea class="form-control"
                              name="reason"
                              required></textarea>
                </div>

                <div class="alert alert-warning small">
                    ⚠️ Sau khi hoàn tiền, đơn hàng sẽ bị hủy.
                </div>
            </div>

            <div class="modal-footer">
                <button type="submit" class="btn btn-danger">
                    Xác nhận hoàn tiền
                </button>
            </div>

        </form>
    </div>
</div>

@section Scripts {
<script>
    const refundModal = document.getElementById('refundModal');

    refundModal.addEventListener('show.bs.modal', function (event) {
        const button = event.relatedTarget;

        const orderId = button.getAttribute('data-order-id');
        const amount = button.getAttribute('data-amount');

        document.getElementById('refundOrderId').value = orderId;
        document.getElementById('refundAmount').value = amount;
    });

        // ===== AUTO HIDE SUCCESS ALERT =====
        setTimeout(() => {
            const alertNode = document.getElementById('successAlert');
            if (alertNode) {
                const bsAlert = new bootstrap.Alert(alertNode);
                bsAlert.close();
            }
        }, 3000);
</script>
}