@model E_Commerce_Platform_Ass1.Web.Models.AddVariantViewModel
@{
    ViewData["Title"] = "Thêm biến thể sản phẩm";
    Layout = "~/Views/Shared/_EShopperLayout.cshtml";
}

<div class="container-fluid pt-5">
    <div class="row px-xl-5">
        <div class="col-lg-8 mx-auto">
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb bg-light p-3 rounded">
                    <li class="breadcrumb-item">
                        <a asp-controller="Home" asp-action="Index">Trang chủ</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a asp-controller="Products" asp-action="Index">Sản phẩm</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a asp-controller="Products" asp-action="Edit" asp-route-id="@Model.ProductId">@Model.ProductName</a>
                    </li>
                    <li class="breadcrumb-item active">Thêm biến thể</li>
                </ol>
            </nav>

            <!-- Form Card -->
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white py-3">
                    <h4 class="mb-0">
                        <i class="fas fa-plus-circle mr-2"></i>Thêm biến thể cho "@Model.ProductName"
                    </h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="AddVariant" asp-route-id="@Model.ProductId" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Tên biến thể -->
                        <div class="form-group">
                            <label asp-for="VariantName" class="font-weight-semi-bold">
                                <i class="fas fa-cube text-primary mr-2"></i>@Html.DisplayNameFor(m => m.VariantName)
                                <span class="text-danger">*</span>
                            </label>
                            <input asp-for="VariantName" class="form-control py-3" 
                                   placeholder="VD: iPhone 15 Pro 256GB - Đen" />
                            <span asp-validation-for="VariantName" class="text-danger small"></span>
                            <small class="form-text text-muted">
                                <i class="fas fa-info-circle mr-1"></i>Mô tả ngắn gọn về biến thể (bao gồm size, màu, dung lượng...)
                            </small>
                        </div>

                        <div class="row">
                            <!-- Giá -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Price" class="font-weight-semi-bold">
                                        <i class="fas fa-money-bill text-primary mr-2"></i>@Html.DisplayNameFor(m => m.Price)
                                        <span class="text-danger">*</span>
                                    </label>
                                    <div class="input-group">
                                        <input asp-for="Price" type="number" step="1000" min="0" 
                                               class="form-control py-3" placeholder="0" />
                                        <div class="input-group-append">
                                            <span class="input-group-text">₫</span>
                                        </div>
                                    </div>
                                    <span asp-validation-for="Price" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Tồn kho -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Stock" class="font-weight-semi-bold">
                                        <i class="fas fa-warehouse text-primary mr-2"></i>@Html.DisplayNameFor(m => m.Stock)
                                        <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="Stock" type="number" min="0" 
                                           class="form-control py-3" placeholder="0" />
                                    <span asp-validation-for="Stock" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <!-- Kích thước -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Size" class="font-weight-semi-bold">
                                        <i class="fas fa-ruler text-primary mr-2"></i>@Html.DisplayNameFor(m => m.Size)
                                    </label>
                                    <input asp-for="Size" class="form-control py-3" 
                                           placeholder="VD: S, M, L, XL, 128GB, 256GB..." />
                                    <span asp-validation-for="Size" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Màu sắc -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Color" class="font-weight-semi-bold">
                                        <i class="fas fa-palette text-primary mr-2"></i>@Html.DisplayNameFor(m => m.Color)
                                    </label>
                                    <input asp-for="Color" class="form-control py-3" 
                                           placeholder="VD: Đen, Trắng, Xanh..." />
                                    <span asp-validation-for="Color" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <!-- SKU -->
                        <div class="form-group">
                            <label asp-for="Sku" class="font-weight-semi-bold">
                                <i class="fas fa-barcode text-primary mr-2"></i>@Html.DisplayNameFor(m => m.Sku)
                            </label>
                            <input asp-for="Sku" class="form-control py-3" 
                                   placeholder="VD: IP15P-256-BLK" />
                            <span asp-validation-for="Sku" class="text-danger small"></span>
                            <small class="form-text text-muted">
                                <i class="fas fa-info-circle mr-1"></i>Mã SKU duy nhất để quản lý kho
                            </small>
                        </div>

                        <!-- Hình ảnh -->
                        <div class="form-group">
                            <label asp-for="ImageUrl" class="font-weight-semi-bold">
                                <i class="fas fa-image text-primary mr-2"></i>@Html.DisplayNameFor(m => m.ImageUrl)
                            </label>
                            <input asp-for="ImageUrl" class="form-control py-3" 
                                   placeholder="https://example.com/variant-image.jpg" />
                            <span asp-validation-for="ImageUrl" class="text-danger small"></span>
                            <small class="form-text text-muted">
                                <i class="fas fa-info-circle mr-1"></i>URL hình ảnh riêng cho biến thể này (nếu khác với sản phẩm chính)
                            </small>
                        </div>

                        <hr class="my-4">

                        <!-- Buttons -->
                        <div class="d-flex justify-content-between">
                            <a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-outline-secondary px-4">
                                <i class="fas fa-arrow-left mr-2"></i>Hủy
                            </a>
                            <button type="submit" class="btn btn-primary px-5">
                                <i class="fas fa-save mr-2"></i>Lưu biến thể
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
