@{
    ViewData["Title"] = "Chờ xác thực Email";
    Layout = "~/Views/Shared/_EShopperLayout.cshtml";
    var email = ViewData["Email"]?.ToString();
    var emailSent = ViewData["EmailSent"] as bool? ?? true;
}

<!-- Page Header Start -->
<div class="container-fluid bg-secondary mb-5">
    <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 300px">
        <h1 class="font-weight-semi-bold text-uppercase mb-3">Xác thực Email</h1>
        <div class="d-inline-flex">
            <p class="m-0"><a asp-controller="Home" asp-action="Index">Trang chủ</a></p>
            <p class="m-0 px-2">-</p>
            <p class="m-0">Xác thực Email</p>
        </div>
    </div>
</div>
<!-- Page Header End -->

<!-- Verification Pending Start -->
<div class="container-fluid pt-5">
    <div class="row px-xl-5 justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="text-center bg-light p-5 rounded">
                @if (emailSent)
                {
                    <div class="mb-4">
                        <i class="fas fa-envelope-open-text text-primary" style="font-size: 80px;"></i>
                    </div>
                    <h3 class="mb-4">Kiểm tra hộp thư của bạn!</h3>
                    <p class="text-muted mb-4">
                        Chúng tôi đã gửi một email xác thực đến địa chỉ:<br>
                        <strong class="text-dark">@email</strong>
                    </p>
                    <p class="text-muted mb-4">
                        Vui lòng kiểm tra hộp thư (và thư mục Spam) để tìm email từ chúng tôi và click vào link xác thực.
                    </p>
                    
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle mr-2"></i>
                        Link xác thực sẽ hết hạn sau <strong>24 giờ</strong>.
                    </div>
                }
                else
                {
                    <div class="mb-4">
                        <i class="fas fa-exclamation-triangle text-warning" style="font-size: 80px;"></i>
                    </div>
                    <h3 class="mb-4">Tài khoản đã tạo nhưng không gửi được email</h3>
                    <p class="text-muted mb-4">
                        Tài khoản của bạn đã được tạo thành công, nhưng chúng tôi không thể gửi email xác thực.
                        Vui lòng yêu cầu gửi lại email xác thực.
                    </p>
                    
                    <a asp-action="ResendVerification" class="btn btn-warning btn-lg">
                        <i class="fas fa-redo mr-2"></i>Gửi lại email xác thực
                    </a>
                }
                
                <hr class="my-4">
                
                <p class="text-muted small mb-3">
                    Không nhận được email?
                </p>
                <a asp-action="ResendVerification" class="btn btn-outline-primary">
                    <i class="fas fa-paper-plane mr-2"></i>Gửi lại email xác thực
                </a>
                
                <div class="mt-4">
                    <a asp-action="Login" class="text-muted">
                        <i class="fas fa-arrow-left mr-1"></i>Quay lại đăng nhập
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Verification Pending End -->
